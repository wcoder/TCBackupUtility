<Window x:Class="TCBackupUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TC Backup Utility"
		Height="200"
		Width="400"
		ResizeMode="NoResize">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="50" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Button 
			Grid.Column="0"
			FontSize="16"
			Content="Export settings INI"
			Click="ExportSettingsIni" />
		<Button 
			Grid.Column="2"
			FontSize="16"
			Content="Import settings INI"
			Click="ImportSettingsIni" />
	</Grid>
</Window>